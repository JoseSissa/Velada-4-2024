---
const { href } = Astro.props;
---

{
    href && (
        <a
            href={href}
            class="relative md:w-32 flex justify-center items-center py-6"
            rel="noopener noreferrer"
            target="_blank"
        >
            <slot />
        </a>
    )
}

<style>
    a {
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.1) 0%,
            transparent 100%
        );
        transition: all 0.5s ease;
        z-index: 0;
    }
    a::before {
        content: "";
        position: absolute;
        inset: 0;
        display: block;
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.2) 0%,
            transparent
        );
        opacity: 0;
        height: 50%;
        transition:
            opacity 0.2s ease-in-out,
            height 0.2s ease-in-out;
    }
    a:hover::before,
    a:focus::before {
        opacity: 1;
        height: 90%;
        z-index: 100;
    }

    a:hover {
        svg {
            scale: 1.1;
        }
    }
</style>
