---
import HeroLogo from "@/components/HeroLogo.astro";
import AnimatedX from "@/components/AnimatedX.astro";
---

<section class="flex flex-col place-items-center mb-32">
    <a class="mb-14 font-atomic text-4xl -rotate-6 text-white hover:scale-110 transition-transform">twitch.tv/ibai</a>
    <div class="relative">
		<AnimatedX />
		<div
			class="absolute inset-0 -z-10 m-auto w-full rounded-full bg-black opacity-70 blur-2xl md:size-[400px]"
		>
		</div>
		<HeroLogo class="h-auto w-[250px] overflow-visible md:w-[500px]" />
        <HeroLogo
            class="absolute inset-0 w-[250px] md:w-[500px] h-auto m-auto -z-10 text-[#D5FF00] blur"
        />
	</div>
</section>

<style>
	a::before {
		content: "";
		position: absolute;
		left: 0;
		bottom: -2px;
		width: 100%;
		height: 3px;
		background-color: white;
		transform-origin: right;
		transform: scaleX(0);
		transition: transform 0.2s ease-in-out;
	}

	a:hover::before {
		transform: scaleX(1);
		transform-origin: left;
	}
</style>